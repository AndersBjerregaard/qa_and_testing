@page "/calculator"

<h1>Basic Calculator Demo Using Blazor</h1>
<hr />
<div>
    <div class="row">
        <div class="col-md-3">
            <p>First Number</p>
        </div>
        <div class="col-md-4">
            <input id="num1Input" placeholder="Enter First Number" @bind="@num1" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Second Number</p>
        </div>
        <div class="col-md-4">
            <input id="num2Input" placeholder="Enter Second Number" @bind="@num2" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-3">
            <p>Result</p>
        </div>
        <div class="col-md-4">
            <input id="resultInput" readonly @bind="@finalresult" />
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-2">
            <button id="addButton" @onclick="AddNumbers" class="btn btn-light">Add (+)</button>
        </div>
        <div class="col-md-2">
            <button id="subtractButton" @onclick="SubtractNumbers" class="btn btn-primary">Subtract (−)</button>
        </div>
        <div class="col-md-2">
            <button id="multiplyButton" @onclick="MultiplyNumbers" class="btn btn-success ">Multiply (X)</button>
        </div>
        <div class="col-md-2">
            <button id="divideButton" @onclick="DivideNumbers" class="btn btn-info">Divide (/)</button>
        </div>
        <div class="col-md-2">
            <button id="nthPowerButton" @onclick="NthPowerNumbers" class="btn btn-info">Nth Power (x^y)</button>
        </div>
        <div class="col-md-2">
            <button id="modulusButton" @onclick="ModulusNumbers" class="btn btn-info">Modulus (%)</button>
        </div>
        <div class="col-md-2">
            <button id="logButton" @onclick="LogarithmNumbers" class="btn btn-info">Log of 10 (log) - Only takes input from first field</button>
        </div>
    </div>
</div>

@code {
    string num1;
    string num2;

    string finalresult;
    void AddNumbers()
    {
        finalresult = (Convert.ToDouble(num1) + Convert.ToDouble(num2)).ToString();
    }
    void SubtractNumbers()
    {
        finalresult = (Convert.ToDouble(num1) - Convert.ToDouble(num2)).ToString();
    }
    void MultiplyNumbers()
    {
        finalresult = (Convert.ToDouble(num1) * Convert.ToDouble(num2)).ToString();
    }
    void DivideNumbers()
    {
        if (Convert.ToDouble(num2) != 0)
        {
            finalresult = (Convert.ToDouble(num1) / Convert.ToDouble(num2)).ToString();
        }
        else
        {
            finalresult = "Cannot Divide by Zero";
        }
    }
    void NthPowerNumbers()
    {
        finalresult = Math.Pow(Convert.ToDouble(num1), Convert.ToDouble(num2)).ToString();
    }
    void ModulusNumbers()
    {
        finalresult = (Convert.ToDouble(num1) % Convert.ToDouble(num2)).ToString();
    }
    void LogarithmNumbers()
    {
        finalresult = Math.Log10(Convert.ToDouble(num1)).ToString();
    }
}
